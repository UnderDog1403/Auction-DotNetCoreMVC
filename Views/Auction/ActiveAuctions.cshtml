@model IEnumerable<MyApp.Models.Auction>

<h2 class="text-center">Phiên đấu giá đang diễn ra</h2>

<table class="table">
    <thead>
        <tr class="text-center">
            <th>Tiêu đề</th>
            <th>Ảnh</th>
            <th>Mô tả</th>
            <th>Kết thúc</th>
            <th>Giá Khởi Điểm</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var auction in Model)
        {
            <tr class="hover-bg-primary" style="cursor:pointer;" onclick="window.location.href='@Url.Action("Details", "Auction", new { id = auction.Id })'">

                <td>@auction.Name</td>
                <td><img src="@auction.ImgUrl" alt="Ảnh sản phẩm @auction.Name" class="img-fluid" style="max-height: 100px;" /></td>
                <td>@auction.Description</td>
                <td>@auction.TimeEnd.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@auction.PriceStart.ToString("N0") VNĐ</td>
            </tr>
        }
    </tbody>
</table>